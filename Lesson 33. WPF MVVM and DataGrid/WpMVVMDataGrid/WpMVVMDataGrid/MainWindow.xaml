<Window x:Class="WpMVVMDataGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpMVVMDataGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Width="100">
            <Button Name="btnAddUser" Click="btnAddUser_Click">Додати</Button>
            <Button Name="btnEditUser" Click="btnEditUser_Click">Редагувати</Button>
        </StackPanel>

        <DataGrid Name="dgUsers" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Фото">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Width="50" Height="100" 
                                   Source="{Binding Image}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="Ім'я" 
                                    Binding="{Binding Name}"
                                    MinWidth="200"
                                    MaxWidth="400"/>

                <DataGridTextColumn Header="Телефон" 
                                    Binding="{Binding Phone}"
                                    MinWidth="150"
                                    MaxWidth="200"/>

            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
