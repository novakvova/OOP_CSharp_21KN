<Window x:Class="MyUsersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyUsersApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel Margin="10" DockPanel.Dock="Top">
            <Button Name="btnViewList" 
                    Width="120" Height="30" Margin="5"
                    Content="Відобразити список" Click="btnViewList_Click" />

            <Button Name="btnInitList" 
                Width="130" Height="30" Margin="5"
                Content="Початкова ініціалізація" Click="btnInitList_Click" />

            <Button Name="btnClearList" 
                Foreground="Red"
                Width="150" Height="30" Margin="5"
                Content="Очистити список" Click="btnClearList_Click" />

        </WrapPanel>

    </DockPanel>
</Window>
